<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="helloworld.iconikindia.com.android_session3_assignment2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:weightSum="7">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorRed"
            android:text="Red"
            android:layout_weight="1"
            android:onClick="btnRedClicked"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorOrange"
            android:text="Orange"
            android:layout_weight="1"
            android:onClick="btnOrangeClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorYellow"
            android:text="Yellow"
            android:layout_weight="1"
            android:onClick="btnYellowClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorGreen"
            android:text="Green"
            android:layout_weight="1"
            android:onClick="btnGreenClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorBlue"
            android:text="Blue"
            android:layout_weight="1"
            android:onClick="btnBlueClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorIngigo"
            android:text="Ingigo"
            android:layout_weight="1"
            android:onClick="btnIngigoClicked"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorViolet"
            android:text="Violet"
            android:layout_weight="1"
            android:onClick="btnVioletClicked"
            />


    </LinearLayout>
</RelativeLayout>
